{
    "compilerOptions": {
      "allowJs": true,
      "lib": ["deno.window"],
      "strict": true
    },

    "fmt": {
      "files": {
        "include": ["src/"],
        "exclude": ["src/testdata/"]
      },
      "options": {
        "useTabs": true,
        "lineWidth": 80,
        "indentWidth": 4,
        "singleQuote": true,
        "proseWrap": "preserve"
      }
    },
    "test": {
      "files": {
        "include": ["src/"],
        "exclude": ["src/testdata/"]
      }
    }
  }
  